<div>
  <h1>Products</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
      </tr>
      {{#each totalProducts}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.price}}</td>
        </tr>
      {{/each}}
    </thead>
  </table>
</div>